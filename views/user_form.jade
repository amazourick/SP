extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='User' name='username' value=(undefined===user ? '': user.username))
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', name='password')
    div.form-group
        label(for='confirmPassword') Confirm Password:
        input#confirmPassword.form-control(type='password', name='confirmPassword')

    div.form-group
        label(for='permission') Permission:
        select#permission.form-control(type='select' placeholder='Select permission' name='permission' required='true')
            for permission in permission_list
                if user
                    option(value=permission selected=(permission==user.permission ? 'selected' : false)) #{permission}
                else
                    option(value=permission) #{permission}

    button.btn.btn-primary(type='submit') Save

   if errors
       ul
           for error in errors
               li!= error.msg